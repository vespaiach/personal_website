{
  "name": "personal_website",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc && node ./build/index.js && npm run tailwindcss",
    "dev:build": "tsc && node ./build/index.js --watch",
    "tailwindcss": "tailwindcss -i ./assets/main.css -o ./dist/main.css",
    "dev:tailwindcss": "tailwindcss -i ./assets/main.css -o ./dist/main.css --watch",
    "preview": "http-server ./dist -p 8088",
    "tsc": "tsc"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.0.15",
    "@tailwindcss/typography": "^0.5.16",
    "gray-matter": "^4.0.3",
    "http-server": "^14.1.1",
    "marked": "^15.0.7",
    "nunjucks": "^3.2.4",
    "tailwindcss": "^4.0.15",
    "typescript": "^5.8.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.14",
    "@types/nunjucks": "^3.2.6"
  }
}
